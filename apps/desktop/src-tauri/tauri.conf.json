{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lazycat",
  "version": "0.1.0",
  "identifier": "com.lazycat.desktop",
  "build": {
    "beforeDevCommand": "pnpm vite",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist-renderer"
  },
  "app": {
    "windows": [
      {
        "title": "Lazycat 懒猫",
        "width": 1360,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
